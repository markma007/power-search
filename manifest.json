{   
    "manifest_version": 3,
    "name": "Power search",
    "version": "0.2.0",
    
    "description": "Chrome extention for power search",
    "icons": {

    },
	
	"background": {
        "service_worker": "service-worker.js"
    },

    "permissions": [
        "scripting", 
        "history",
        "storage",
		"tabs"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "exclude_globs":[
                "*://www.google.com/*",
                "*://www.google.ca/*",
                "*://duckduckgo.com/*"
            ],
            "css": ["lib/semantic.min.css", "content.css"],
            "js": ["lib/jquery.min.js", "content.js"]
        }
    ],

    "options_page": "options.html",

    "action": {
        "default_popup": "popup.html"
    },
	
	"commands": {
		"start-search": {
			"suggested_key": {
				"default": "Ctrl+Shift+F"
			},
			"description": "open search window"
			
		}
	}
}
